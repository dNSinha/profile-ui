{
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaFeatures": {
          "jsx": true
        }
      },
    "extends": [
        "eslint:recommended"
        
    ],
    "globals": {
        "document": false,
        "console":false,
        "window":false,
        "Promise":false
    },
    "rules": {
        "max-len": [2, 120, 2, {"ignoreComments": true}],
        "semi": [2, "always"],
        "no-unused-vars": [1, { "vars": "all", "args": "after-used",
                    "ignoreRestSiblings": false }],
        "no-console": 2,
        "no-undef": 0,
        "no-useless-escape": 1,
        "eqeqeq": [2, "smart"]
        
    }
}
